<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:mongo="http://www.springframework.org/schema/data/mongo"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/data/mongo
       http://www.springframework.org/schema/data/mongo/spring-mongo-1.3.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

   
    <context:annotation-config/>

	<context:component-scan base-package="br.com.oncast.codechallenge.domain"/>
	<context:component-scan base-package="br.com.oncast.codechallenge.service"/>

    <!--
       Configures Spring Data JPA and sets the base package of my DAOs.
   -->
    <mongo:repositories base-package="br.com.oncast.codechallenge.repository"/>

    <mongo:db-factory id="mongo-factory"
                      dbname="codechallenge-db"
                      host="ds041367.mongolab.com"
                      port="41367"
                      username="codechallenge-dbuser"
                      password="codechallenge12"/>

    <mongo:template db-factory-ref="mongo-factory" id="mongoTemplate"/>

    <mongo:mapping-converter db-factory-ref="mongo-factory" id="mongoConverter"
                             base-package="br.com.oncast.codechallenge.repository"/>

</beans>